<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_translucent"
    >

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@color/transparent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/bg_location">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="@drawable/bg_location_list">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:id="@+id/lv_location_1"/>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:id="@+id/lv_location_2"/>

                </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:id="@+id/iv_select"
                android:src="@drawable/ic_datapicker_divider"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/layout_gray"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="취소"
                android:layout_weight="1"
                android:id="@+id/btn_cancel"
                android:background="@drawable/btn_dlg_location_bg_selector"/>
            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dark_border_gray"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="확인"
                android:background="@drawable/btn_dlg_location_bg_selector"
                android:id="@+id/btn_ok"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>