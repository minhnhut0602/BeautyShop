<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_content">
             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_shop_manage_logo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/layout_border_round_grey">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_gray"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/fl_border_1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/iv_name"
                            android:src="@drawable/ic_login_person"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_logo_exit"
                            android:id="@+id/iv_name_exit"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/iv_name_exit"
                            android:layout_toRightOf="@+id/iv_name"
                            android:background="@color/transparent"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:hint="숍아이디를 입력하세요."
                            android:id="@+id/et_logo_shop_id"
                            android:padding="5dp"/>
                        </RelativeLayout>

                    </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="25dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_gray"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/fl_border_2"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/iv_pw"
                            android:src="@drawable/ic_login_pw"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_logo_exit"
                            android:id="@+id/iv_pw_exit"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/iv_pw_exit"
                            android:layout_toRightOf="@+id/iv_pw"
                            android:background="@color/transparent"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:inputType="textPassword"
                            android:id="@+id/et_logo_shop_pw"
                            android:hint="비밀번호를 입력하세요."
                            android:padding="5dp"/>
                    </RelativeLayout>

                </RelativeLayout>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:button="@drawable/btn_check_selector"
                    android:textColor="@color/text_gray"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/padding_checkbox"
                    android:textSize="12sp"
                    android:text="자동로그인"
                    android:id="@+id/cb_autologin"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="로그인"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_cast_comment_search_selector"
                    android:id="@+id/btn_login"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/btn_bg_style1_selector"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    />

                </LinearLayout>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="30dp"
                     android:text="아이디/비밀번호 찾기"
                     android:textSize="12sp"
                     android:textColor="@color/main_background_color"
                     android:background="@color/transparent"
                     android:gravity="center"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginTop="5dp"
                     android:id="@+id/tv_find_shop_password"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>