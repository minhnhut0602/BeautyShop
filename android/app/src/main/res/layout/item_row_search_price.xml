<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="미미미용실"
                android:textColor="@color/text_gray"
                android:textSize="13sp"
                android:gravity="left|center_vertical"
                android:id="@+id/tv_shop_name"/>
            <TextView
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="러블리펌"
                android:textColor="@color/text_gray"
                android:textSize="13sp"
                android:gravity="center"
                android:id="@+id/tv_product_name"/>
            <TextView
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="40000원"
                android:textColor="@color/text_gray"
                android:textSize="13sp"
                android:gravity="center"
                android:id="@+id/tv_right_price"/>
            <TextView
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="35000원"
                android:textColor="@color/main_background_color"
                android:textSize="13sp"
                android:gravity="center"
                android:id="@+id/tv_event_price"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="서울특별시 광진구 화양동 7-1"
                android:textSize="13sp"
                android:textColor="@color/light_text_gray"
                android:id="@+id/tv_address"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <mimishop.yanji.com.mimishop.view.StarRatingBar
                    xmlns:ratingbar="http://schemas.android.com/apk/res/mimishop.yanji.com.mimishop"
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    ratingbar:rating="0"
                    ratingbar:max_rating="5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_review_cnt"
                    android:text="평가 26건"
                    android:textSize="13sp"
                    android:textColor="@color/button_gray"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_gray"/>
</LinearLayout>