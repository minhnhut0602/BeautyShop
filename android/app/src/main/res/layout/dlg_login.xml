<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_translucent"
    android:id="@+id/root">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="295dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dlg_login">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="회원가입 하기"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/btn_bg_red_round_selector"
                android:id="@+id/btn_ok"
                android:layout_marginRight="2dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="나중에 하기"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/btn_bg_gray_round_selector"
                android:id="@+id/btn_cancel"
                android:layout_marginRight="2dp"/>
        </LinearLayout>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/dlg_login_close"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_close"/>

    </RelativeLayout>
</RelativeLayout>