<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mimishop.yanji.com.mimishop.activity.shopinfo.ImageViewActivity"
    android:background="@color/black">

    <mimishop.yanji.com.mimishop.view.ExtendedViewPager
        android:id="@+id/view_pager"
        android:background="@color/transparent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@drawable/top_bar_back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ib_back"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/top_bar_forward"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

</RelativeLayout>
